{
  "name": "magic-leap-blog",
  "version": "1.0.0",
  "description": "A Node, Express and React based isomorphic blog.",
  "main": "server.js",
  "scripts": {
    "start": "npm run build && node src/server-es5.js",
    "start:dev": "export NODE_ENV=development && npm run build:dev && nodemon --exec babel-node -- src/server.js",
    "start:universal": "export UNIVERSAL=true && npm run start",
    "start:dev:universal": "export NODE_ENV=development && export UNIVERSAL=true && npm run start:dev",
    "build": "NODE_ENV=production webpack -p",
    "build:dev": "webpack -d",
    "build:dev:watch": "webpack -d --watch",
    "all": "export NODE_ENV=development && npm run build:dev && webpack -d --watch && nodemon --exec babel-node -- src/server.js"
  },
  "author": "Nicholas Abrams",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "ejs": "^2.5.2",
    "express": "5.0.0-alpha.5",
    "firebase": "^4.1.3",
    "jquery": "^3.2.1",
    "momentjs": "^2.0.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-router-dom": "^4.1.1"
  },
  "devDependencies": {
    "babel-loader": "^7.1.0",
    "babel-register": "^6.24.1",
    "eslint": "^3.18.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "nodemon": "^1.11.0",
    "webpack": "3.0.0",
    "webpack-node-externals": "^1.6.0"
  }
}
